<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/space_16">

        <CheckBox
            android:id="@+id/rdb_setting_night"
            android:layout_width="@dimen/space_70"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/select_b_set_night"
            android:gravity="center_horizontal"
            android:text="@string/night_type" />

        <CheckBox
            android:id="@+id/rdb_setting_eye"
            android:layout_width="@dimen/space_70"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/select_b_set_eye"
            android:gravity="center_horizontal"
            android:text="@string/eye_type" />
    </LinearLayout>

    <View style="@style/view_line_1_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/space_16">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/right_go_next"
            android:textColor="@color/black" />

        <CheckBox
            android:id="@+id/swt_select_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/select_pop_swt_bg" />
    </LinearLayout>

    <View style="@style/view_line_1_gray" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/space_48"
        android:layout_marginLeft="@dimen/space_16"
        android:gravity="center_vertical"
        android:text="@string/delect_right_number"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_14" />

    <RadioGroup
        android:id="@+id/rg_content_delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/space_16"
        android:paddingLeft="@dimen/space_16"
        android:paddingRight="@dimen/space_16">

        <RadioButton
            android:id="@+id/rdb_pop_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/select_setting_one" />

        <RadioButton
            android:checked="true"
            android:id="@+id/rdb_pop_3"
            android:layout_marginLeft="@dimen/space_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/select_setting_three" />

        <RadioButton
            android:id="@+id/rdb_pop_5"
            android:layout_marginLeft="@dimen/space_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/select_setting_five" />

        <RadioButton
            android:id="@+id/rdb_pop_no"
            android:layout_marginLeft="@dimen/space_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/select_setting_delelt" />
    </RadioGroup>

</LinearLayout>