<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:paddingTop="@dimen/space_8"
    android:orientation="vertical">

    <LinearLayout
        android:paddingTop="@dimen/space_10"
        android:paddingBottom="@dimen/space_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <CheckBox
            android:layout_marginRight="@dimen/space_10"
            android:button="@drawable/select_free_chb_bg"
            android:id="@+id/chb_net_down_ing"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical" />

        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/iv_net_down_img"
            android:layout_width="@dimen/spance_120"
            android:layout_height="@dimen/space_70"
            android:src="@mipmap/f_t" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_net_downing_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2222"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_16" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_net_downing_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="22222"
                    android:textColor="@color/hint_text"
                    android:textSize="@dimen/text_size_12" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/number_video"
                    android:textColor="@color/hint_text"
                    android:textSize="@dimen/text_size_12" />

                <TextView
                    android:id="@+id/tv_net_downing_cout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/space_16"
                    android:text="200M"
                    android:textColor="@color/hint_text"
                    android:textSize="@dimen/text_size_12" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_marginTop="@dimen/space_8"
        style="@style/view_line_1" />
</LinearLayout>