<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_four_evaluate_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/space_16"
    android:layout_marginRight="@dimen/space_16"
    android:layout_marginTop="@dimen/space_16"
    android:orientation="vertical"
    android:visibility="gone">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_gmfour_evaluate_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/evaluate"
            android:textColor="@color/text_title_color"
            android:textSize="@dimen/text_size_18"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_gmfour_nuber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_8"
            android:layout_weight="1"
            android:text="(16)"
            android:textColor="@color/text_fu_color"
            android:textSize="@dimen/text_size_12" />

        <ImageView
            android:id="@+id/iv_gmfour_evaluate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/qb_pinglun" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_gmfour_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:descendantFocusability="blocksDescendants">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rlv_gmfour_content"
            android:nestedScrollingEnabled="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_gmfour_more_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="@dimen/space_8">

        <ProgressBar
            android:layout_width="@dimen/space_32"
            android:layout_height="@dimen/space_32"
            android:indeterminateTint="@color/gray"
            android:indeterminateTintMode="src_atop" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/space_48"
            android:gravity="center"
            android:paddingLeft="@dimen/space_8"
            android:text="@string/loading_more"
            android:textColor="@color/gray"
            android:textSize="@dimen/text_size_14" />

    </LinearLayout>

    <include layout="@layout/empty_evalue" />

</LinearLayout>