    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.GuideFragment">

    <ImageView
        android:id="@+id/iv_guidler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/bpage1" />

    <Button
        android:id="@+id/btn_done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_select_answer_evalue"
        android:text="@string/start_using"
        android:layout_marginBottom="@dimen/space_32"
        android:layout_centerInParent="true"
        android:textColor="@color/red_text" />
</RelativeLayout>