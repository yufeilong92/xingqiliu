<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_gmtitle_select_layout"
    android:layout_width="match_parent"
    android:visibility="gone"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_gmTitle_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/space_16"
            android:text="1"
            android:textColor="@color/text_title_color"
            android:textSize="@dimen/text_size_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            android:textColor="@color/text_fu_color"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:id="@+id/tv_gmTitle_Allnumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_2"
            android:text="5"
            android:textColor="@color/text_fu_color"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:id="@+id/tv_gmTitle_text_last"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_8"
            android:background="@drawable/tv_bank_bar_bg"
            android:paddingBottom="@dimen/space_2"
            android:paddingLeft="@dimen/space_8"
            android:paddingRight="@dimen/space_8"
            android:paddingTop="@dimen/space_2"
            android:text="简答"
            android:textColor="@color/text_fu_color" />

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/iv_gmTitle_mulu"
            android:src="@mipmap/ba_timu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_gmTitle_text_stem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>