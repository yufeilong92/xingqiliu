<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_48"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/iv_tree_mark"
            android:layout_width="@dimen/space_18"
            android:layout_height="@dimen/space_18"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/space_16"
            android:src="@mipmap/ic_node" />

        <TextView
            android:id="@+id/tv_atricle_tree"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/space_16"
            android:text="nihai "
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:text="666"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/space_8"
            android:textColor="@color/text_fu_color"
            android:textSize="@dimen/text_size_12"
            android:id="@+id/tv_bankQuestionNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/space_16"
            android:padding="@dimen/space_8"
            android:src="@mipmap/ic_more_go" />

        <LinearLayout
            android:id="@+id/li_look"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingRight="@dimen/space_8">


            <TextView
                android:id="@+id/tv_look"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="52"
                android:textColor="@color/text_fu_color"
                android:textSize="@dimen/text_size_12" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/"
                android:textColor="@color/text_fu_color"
                android:textSize="@dimen/text_size_12" />

            <TextView
                android:id="@+id/tv_cout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="200"
                android:textColor="@color/text_fu_color"
                android:textSize="@dimen/text_size_12" />
        </LinearLayout>
    </LinearLayout>

    <View style="@style/view_line_1_gray" />
</LinearLayout>