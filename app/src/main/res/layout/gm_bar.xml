<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/fl_gmsix_layout"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/li_gmsix_text_navbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_48"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/space_16"
        android:paddingRight="@dimen/space_16"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_gmsixtext_collect"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableLeft="@mipmap/qb_answer_icon_coll"
            android:drawablePadding="@dimen/space_6"
            android:gravity="center_vertical"
            android:text="@string/collect" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/space_16"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_gmsixtext_menu"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="@dimen/space_8"
                android:src="@mipmap/ic_b_card" />

            <TextView
                android:id="@+id/tv_gmsixtext_qid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/red_text"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sprit"
                android:textColor="@color/red_text"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:id="@+id/tv_gmsixtext_allqid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_12"
                android:textColor="@color/red_text"
                android:textSize="@dimen/text_size_14" />
            <!--android:button="@drawable/select_b_collect_color"-->
        </LinearLayout>

        <TextView
            android:id="@+id/tv_gmsixtext_share"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableLeft="@mipmap/qbank_answer_icon_share"
            android:drawablePadding="@dimen/space_6"
            android:gravity="center_vertical"
            android:padding="@dimen/space_8"
            android:text="@string/share" />

    </LinearLayout>
</FrameLayout>