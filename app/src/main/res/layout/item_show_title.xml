<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/space_48"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    android:background="@color/white"
    android:theme="@style/AlertDialog.AppCompat.Light"
    app:cardCornerRadius="@dimen/space_8"
    app:cardElevation="@dimen/space_4">

    <LinearLayout
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/space_32">


        <TextView
            android:layout_gravity="center"
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_8"
            android:gravity="center_horizontal"
            android:text="标题"
            android:layout_marginBottom="@dimen/space_30"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_14" />
        <LinearLayout
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_cancal"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/space_32"
                android:textColor="@color/text_fu_color"
                android:background="@drawable/btn_dialog_canle_bg" />

            <Space style="@style/space_16_width" />

            <Button
                android:textColor="@color/white"
                android:id="@+id/btn_sure"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/space_32"
                android:background="@drawable/btn_dialog_sure_bg" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>