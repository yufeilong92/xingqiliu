<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/ll_item_root"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/space_8">

        <ImageView
            android:id="@+id/iv_evaluate_hear"
            android:layout_width="@dimen/space_48"
            android:layout_height="@dimen/space_48"
            android:src="@mipmap/ic_launcher_round" />

        <Space style="@style/space_20_width" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:textStyle="bold"
                android:id="@+id/tv_evalue_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用户名字"
                android:textColor="@color/text_title_color"
                android:textSize="@dimen/text_size_14" />

            <Space style="@style/space_16_height" />

            <TextView
                android:id="@+id/tv_evalue_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="评价内容评价内容评价内容评价内容评价内容评价内容评价内容评价内容评价内容" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:textSize="@dimen/text_size_12"
                    android:textColor="@color/text_fu_color"
                    android:id="@+id/tv_evalue_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="1分钟" />

                <TextView
                    android:textSize="@dimen/text_size_12"
                    android:textColor="@color/text_fu_color"
                    android:id="@+id/tv_evalue_evalue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/ic_comment"
                    android:drawablePadding="@dimen/space_8"
                    android:text="评论" />

                <Space style="@style/space_16_width" />

                <CheckBox
                    android:text="2222"
                    android:textSize="@dimen/text_size_12"
                    android:textColor="@color/text_fu_color"
                    android:paddingTop="@dimen/space_8"
                    android:paddingLeft="@dimen/space_8"
                    android:id="@+id/chb_evalua_issupper"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/space_8"
                    android:button="@drawable/select_issupper_home" />
                <Space
                    android:visibility="gone"
                    style="@style/space_8_width" />

                <TextView
                    android:visibility="gone"
                    android:id="@+id/tv_evalue_suppernumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="99" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/li_add_comment"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/space_16"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/space_48"
                android:layout_height="@dimen/space_48" />

            <Space style="@style/space_20_width" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rlv_add_evaluate"
                android:layout_marginRight="@dimen/space_16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/gray_line" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginRight="@dimen/space_16"
            android:layout_marginLeft="68dp"
            android:background="@color/gray_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_infom_look_huifu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@mipmap/ic_more_go"
                android:paddingBottom="@dimen/space_8"
                android:paddingLeft="@dimen/spance_12"
                android:text="查看更多回复"
                android:drawablePadding="@dimen/space_8"
                android:textColor="@color/text_fu_color"
                android:textSize="@dimen/text_size_11" />

        </LinearLayout>

    </LinearLayout>

    <View
      style="@style/view_line_1_gray"/>

</LinearLayout>