<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/space_100dp"
    android:orientation="vertical"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/space_16"
        android:paddingTop="@dimen/space_16">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_item_home_title_all"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lineSpacingExtra="@dimen/space_4"
                android:maxLines="2"
                android:text="标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题"
                android:textColor="@color/text_title_color"
                android:textSize="@dimen/space_16" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_8"
                android:gravity="bottom"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_item_home_look_all"
                    style="@style/list_show_look" />

                <Space style="@style/space_16_width" />

                <CheckBox
                    android:id="@+id/chb_isSupper"
                    style="@style/list_show_chb" />

                <Space
                    style="@style/space_8_width"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_item_home_laud_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawablePadding="@dimen/space_6"
                    android:textColor="@color/text_fu_color" />


            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_item_home_all"
            android:layout_width="@dimen/space_100dp"
            android:layout_height="@dimen/space_70"
            android:layout_marginLeft="@dimen/space_8"
            android:scaleType="fitXY"
            android:src="@mipmap/f_t" />
    </LinearLayout>

    <View style="@style/view_line1_gray_line" />
</LinearLayout>