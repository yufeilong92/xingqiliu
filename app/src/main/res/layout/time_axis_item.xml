<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minHeight="@dimen/space_48"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_time_data"
                style="@style/text_title_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8-1-16" />



        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/space_20"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/space_16"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_time_up"
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/add_red_bg" />

            <CheckBox
                android:id="@+id/chn_time_select"
                android:layout_width="wrap_content"
                android:layout_height="14dp"
                android:button="@drawable/select_time_axis"
                android:checked="true"
                android:clickable="false" />

            <TextView
                android:id="@+id/tv_time_down"
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/add_red_bg" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_time_address"
            style="@style/text_title_"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/space_16"
            android:text="河南省郑州市金水区" />
    </LinearLayout>
</LinearLayout>