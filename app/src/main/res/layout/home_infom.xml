<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="@dimen/text_size_16"
    android:paddingLeft="@dimen/text_size_16"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_48"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:visibility="gone"
            android:layout_width="@dimen/space_18"
            android:layout_height="@dimen/space_30"
            android:src="@mipmap/ic_home_information" />

        <Space
            android:visibility="gone"
            style="@style/space_10_width" />

        <TextView
            android:text="@string/home_infom"
            style="@style/home_title_ge" />

        <TextView
            android:id="@+id/tv_infom_more"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawablePadding="@dimen/space_4"
            android:drawableRight="@mipmap/ic_more_go"
            android:gravity="center_vertical"
            android:padding="@dimen/space_8"
            android:text="@string/more"
            android:textColor="@color/hint_text" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rlv_recommend_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>