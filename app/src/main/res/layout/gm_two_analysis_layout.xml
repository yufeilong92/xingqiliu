<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_gmTwo_analysis_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="visible"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginTop="@dimen/space_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/space_8"
        android:layout_marginLeft="@dimen/space_16"
        android:layout_marginRight="@dimen/space_16"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_gmTwo_jiexi_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_select_answer_btn_su"
            android:padding="@dimen/space_4"
            android:textSize="@dimen/text_size_16"
            android:text="@string/analyze" />

        <TextView
            android:id="@+id/tv_gmTwo_jiexi_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/space_4"
            android:textSize="@dimen/text_size_16"
            android:layout_marginLeft="@dimen/space_16" />

    </LinearLayout>

    <View
        android:id="@+id/view_gmtwo_line"
        style="@style/view_line_1_gray"
        android:layout_marginLeft="@dimen/space_16"
        android:layout_marginRight="@dimen/space_16" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/space_8"
        android:layout_marginLeft="@dimen/space_16"
        android:layout_marginRight="@dimen/space_16"
        android:layout_marginTop="@dimen/space_16"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_gmTwo_difficulty_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/difficulty"
            android:textColor="@color/text_fu_color"
            android:textSize="@dimen/text_size_12" />

        <ImageView
            android:id="@+id/iv_gmTwo_star_one"
            android:layout_width="@dimen/space_18"
            android:layout_height="@dimen/text_size_18"
            android:layout_marginLeft="@dimen/space_10"
            android:src="@mipmap/qbank_answer_difficulty_n" />

        <ImageView
            android:id="@+id/iv_gmTwo_star_two"
            style="@style/star_style"
            android:src="@mipmap/qbank_answer_difficulty_n" />

        <ImageView
            android:id="@+id/iv_gmTwo_star_three"
            style="@style/star_style"
            android:src="@mipmap/qbank_answer_difficulty_n" />

        <ImageView
            android:id="@+id/iv_gmTwo_star_four"
            style="@style/star_style"
            android:src="@mipmap/qbank_answer_difficulty_n" />

        <ImageView
            android:id="@+id/iv_gmTwo_star_five"
            style="@style/star_style"
            android:src="@mipmap/qbank_answer_difficulty_n" />

        <TextView
            android:id="@+id/tv_gmTwo_right_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="@string/right_number"
            android:textColor="@color/text_fu_color"
            android:textSize="@dimen/text_size_12" />

        <TextView
            android:id="@+id/tv_gmTwo_right_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_8"
            android:text="30%"
            android:textColor="@color/red_text"
            android:textSize="@dimen/text_size_14" />
    </LinearLayout>

    <View
        android:id="@+id/v_gmtwo_line_three"
        style="@style/view_line_1_gray"
        android:layout_marginLeft="@dimen/space_16"
        android:layout_marginRight="@dimen/space_16" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/space_10"
        android:layout_marginLeft="@dimen/space_16"
        android:layout_marginRight="@dimen/space_16"
        android:layout_marginTop="@dimen/space_10"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_gmTwo_centre_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/centre"
            android:textColor="@color/text_fu_color"
            android:textSize="@dimen/text_size_12" />

        <com.xuechuan.xcedu.weight.FlowLayout
            android:id="@+id/flowlayout_gmTwo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_8" />

    </LinearLayout>

    <View

        android:id="@+id/v_gmTwo_line_two"
        style="@style/space_10_height"
        android:background="@color/gray_line" />

</LinearLayout>