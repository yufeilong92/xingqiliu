<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".ui.me.SystemMsgActivity">
    <LinearLayout style="@style/TitleBar">

        <ImageView
            style="@style/TitleBarAction"
            android:onClick="onHomeClick"
            android:src="@mipmap/ic_back" />

        <TextView
            style="@style/TitleBarText"
            android:text="" />

        <ImageView
            android:id="@+id/iv_del_all_system"
            android:src="@mipmap/q_nav_delect_gray"
            style="@style/TitleBarAction" />

    </LinearLayout>

    <View style="@style/view_line_tab_line" />
    <com.andview.refreshview.XRefreshView
        android:id="@+id/xfv_content_system"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
            android:paddingLeft="@dimen/space_16"
            android:paddingRight="@dimen/space_16"
            android:id="@+id/rlv_my_system"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <ImageView
            android:layout_gravity="center"
            android:src="@mipmap/common_blankimg_notice"
            android:id="@+id/iv_content_empty"
            android:layout_width="match_parent"
            android:scaleType="center"
            android:layout_height="match_parent" />
    </com.andview.refreshview.XRefreshView>
</LinearLayout>