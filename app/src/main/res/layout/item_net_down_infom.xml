<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/space_10">

    <CheckBox
        android:visibility="gone"
        android:id="@+id/chb_item_net_down_infom"
        android:layout_width="wrap_content"
        android:padding="@dimen/space_10"
        android:layout_height="match_parent"
        android:button="@drawable/select_free_chb_bg"
        android:gravity="center_vertical" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_item_down_infom_play"
                android:layout_width="@dimen/space_16"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/space_10"
                android:src="@drawable/c_icon_paly_n" />

            <TextView
                android:id="@+id/tv_item_down_infom_title"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_48"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="2222222222222222222"
                android:textColor="@color/text_title_color"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:id="@+id/tv_item_down_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="正在下载"
                android:textColor="@color/text_fu_color"
                android:textSize="@dimen/text_size_12" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_item_down_speed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="26dp">

            <TextView
                android:id="@+id/tv_item_down_infom_speed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.2M/s"
                android:textColor="@color/text_fu_color"
                android:textSize="@dimen/text_size_12" />

            <TextView
                android:id="@+id/tv_item_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="555M"
                android:textColor="@color/text_fu_color"
                android:textSize="@dimen/text_size_12" />
        </RelativeLayout>

        <ProgressBar
            android:id="@+id/progress_item_down_infom"
            style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="@dimen/space_10"
            android:minHeight="4dp"
            android:progressDrawable="@drawable/progressbar_bg" />
    </LinearLayout>
</LinearLayout>