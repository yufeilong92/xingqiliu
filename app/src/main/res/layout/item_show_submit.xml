<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/space_48"
    android:orientation="vertical"
    android:padding="@dimen/space_32"
    android:theme="@style/AlertDialog.AppCompat.Light"
    app:cardCornerRadius="@dimen/space_8"
    app:cardElevation="@dimen/space_4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/space_16">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/pop_img_handi" />

        <TextView
            android:id="@+id/tv_submit_post_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_8"
            android:gravity="center"
            android:textColor="@color/black"
            android:text="@string/sure_submit_text"
            android:textSize="@dimen/text_size_14" />

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_8"
            android:orientation="horizontal">

            <Button
                android:textColor="@color/text_fu_color"
                android:id="@+id/btn_dialog_cancel"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/space_32"
                android:background="@drawable/btn_dialog_canle_bg"
                android:text="@string/cancel" />

            <Space style="@style/space_16_width" />

            <Button
                android:id="@+id/btn_dialog_submit"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/space_32"
                android:background="@drawable/btn_dialog_sure_bg"
                android:text="@string/submit_text"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>