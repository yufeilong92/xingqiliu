<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.me.RefundProgressActivity">

    <LinearLayout style="@style/TitleBar">

        <ImageView
            style="@style/TitleBarAction"
            android:onClick="onHomeClick"
            android:src="@mipmap/ic_back" />

        <TextView
            style="@style/TitleBarText"
            android:text="@string/refund_progres" />

        <ImageView style="@style/TitleBarAction" />

    </LinearLayout>

    <View style="@style/view_line_tab_line" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_refund_progress"
                android:layout_width="@dimen/space_70"
                android:layout_height="@dimen/space_70"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/space_32"
                android:src="@mipmap/shenhezhong" />

            <TextView
                android:id="@+id/tv_refund_infom_title"
                style="@style/text_title_"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_8"
                android:gravity="center_horizontal"
                android:text="审核中"
                android:textSize="@dimen/text_size_14"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_refund_infom"
                style="@style/text_title_fu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_8"
                android:gravity="center_horizontal"
                android:text="退款信息正在审核，请耐心"
                android:textSize="@dimen/text_size_12" />

            <Space style="@style/space_20_height" />

            <Space style="@style/space_10_height" />

            <View
                style="@style/space_10_height"
                android:background="@color/input_bg" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_20"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/space_16">

                <TextView
                    style="@style/text_title_fu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/refund_identifier"
                    android:textSize="@dimen/text_size_14" />

                <TextView
                    android:id="@+id/tv_refund_pro_identifier"
                    style="@style/text_title_"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_16"
                    android:textSize="@dimen/text_size_14" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_20"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/space_16">

                <TextView
                    style="@style/text_title_fu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/refund_time"
                    android:textSize="@dimen/text_size_14" />

                <TextView
                    android:id="@+id/tv_refund_pro_time"
                    style="@style/text_title_"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_16"
                    android:textSize="@dimen/text_size_14" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_20"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/space_16">

                <TextView
                    style="@style/text_title_fu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/refund_cause"
                    android:textSize="@dimen/text_size_14" />

                <TextView
                    android:id="@+id/tv_refund_pro_cause"
                    style="@style/text_title_"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_16"
                    android:textSize="@dimen/text_size_14" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_20"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/space_16">

                <TextView
                    style="@style/text_title_fu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/refund_value"
                    android:textSize="@dimen/text_size_14" />

                <TextView
                    android:id="@+id/tv_refund_pro_money"
                    style="@style/text_title_"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_16"
                    android:textSize="@dimen/text_size_14" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_20"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/space_16">

                <TextView
                    style="@style/text_title_fu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/phone2"
                    android:textSize="@dimen/text_size_14" />

                <TextView
                    android:id="@+id/tv_refund_pro_phone"
                    style="@style/text_title_"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_16"
                    android:textSize="@dimen/text_size_14" />

            </LinearLayout>

            <Space style="@style/space_20_height" />

            <Space style="@style/space_10_height" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/input_bg" />

                <Button
                    android:id="@+id/btn_refund_pro_cancel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:background="@color/white"
                    android:text="@string/refund_cancel"
                    android:textColor="@color/red_text"
                    android:textSize="@dimen/text_size_14" />
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>