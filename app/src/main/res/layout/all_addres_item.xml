<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/space_16">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_addres_name"
                style="@style/text_title_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="小明" />

            <TextView
                android:id="@+id/tv_address_phone"
                style="@style/text_title_"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/space_16"
                android:text="18616161" />

            <ImageView
                android:id="@+id/iv_addrss_make"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <Space style="@style/space_10_height" />

        <TextView
            android:id="@+id/tv_addres_detial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="222222222222222222222222222222222222222222222222"
            android:textColor="@color/text_title_color"
            android:paddingBottom="@dimen/space_8"
            android:textSize="@dimen/text_size_14" />

        <RelativeLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <CheckBox
                android:id="@+id/chb_address_default"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/select_address_dafault"
                android:paddingLeft="@dimen/space_8"
                android:text="@string/default_address"
                android:textColor="@color/text_title_color"
                android:textSize="@dimen/text_size_14" />

            <ImageView
                android:id="@+id/iv_address_delect"
                android:layout_width="@dimen/space_20"
                android:layout_height="@dimen/space_20"
                android:layout_toLeftOf="@id/iv_address_edit"
                android:layout_marginRight="@dimen/space_24"
                android:src="@mipmap/ic_addres_delet" />

            <ImageView
                android:id="@+id/iv_address_edit"
                android:layout_width="@dimen/space_20"
                android:layout_height="@dimen/space_20"
                android:layout_alignParentRight="true"
                android:src="@mipmap/ic_order_edit" />

        </RelativeLayout>
    </LinearLayout>

    <View style="@style/view_line_1_gray" />
</LinearLayout>