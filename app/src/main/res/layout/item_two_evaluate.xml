<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_item_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/space_16">

        <ImageView
            android:id="@+id/iv_evaluate_hear"
            android:layout_width="@dimen/space_24"
            android:layout_height="@dimen/space_24"
            android:src="@mipmap/common_icon_defaultpicture" />

        <Space style="@style/space_10_width" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:textStyle="bold"
                android:id="@+id/tv_evalue_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用户名字"
                android:textColor="@color/text_title_color"
                android:textSize="@dimen/text_size_12" />

            <TextView
                android:layout_marginTop="@dimen/space_6"
                android:textSize="@dimen/text_size_14"
                android:text=""
                android:textColor="@color/text_title_color"
                android:id="@+id/tv_evalue_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_evalue_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="1分钟"
                    android:textColor="@color/text_fu_color"
                    android:textSize="@dimen/text_size_12" />

                <TextView
                    android:id="@+id/tv_evalue_evalue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/ic_comment"
                    android:drawablePadding="@dimen/space_8"
                    android:text="评论"
                    android:visibility="gone" />
                <CheckBox
                    android:text="22"
                    android:paddingTop="@dimen/space_10"
                    android:paddingLeft="@dimen/space_8"
                    android:paddingBottom="@dimen/space_10"
                    android:id="@+id/chb_evalua_issupper"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/select_issupper_home"
                    android:textColor="@color/text_fu_color"
                    android:textSize="@dimen/text_size_12" />
                <TextView
                    android:visibility="gone"
                    android:textColor="@color/text_fu_color"
                    android:textSize="@dimen/text_size_12"
                    android:id="@+id/tv_evalue_suppernumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="99" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        style="@style/view_line_1"
        />
</LinearLayout>