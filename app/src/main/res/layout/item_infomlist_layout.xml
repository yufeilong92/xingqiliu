<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/space_100"
    android:orientation="horizontal"
    android:padding="@dimen/space_16"
    >
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginRight="@dimen/space_16"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_item_infomlist_titel"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="测试标题测试标题测试标题测试标题测试标题测试标题测试标题测试标题测试标题测试标题"
            android:textColor="@color/text_title_color"
            android:textSize="@dimen/text_size_16" />

        <LinearLayout
            android:layout_marginTop="@dimen/space_8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_item_infomlist_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2018-02-02"
                android:textColor="@color/text_fu_color"
                android:textSize="@dimen/text_size_14" />

            <Space style="@style/space_16_width" />

            <TextView
                android:id="@+id/tv_item_infom_source"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="中国消防资源"
                android:textColor="@color/text_fu_color"
                android:textSize="@dimen/text_size_14" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_item_infomlist_content"
        android:layout_width="@dimen/space_100dp"
        android:layout_height="@dimen/space_70"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_launcher_round" />
</LinearLayout>