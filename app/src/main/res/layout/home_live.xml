<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_live_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_marginLeft="@dimen/space_16"
        android:layout_marginRight="@dimen/space_16"
        android:id="@+id/rl_layout_root"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_100">

        <ImageView
            android:id="@+id/iv_home_live"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@mipmap/s_n" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_20"
            android:layout_marginTop="70dp"
            android:background="@drawable/bg_home_live_time"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/space_8"
            android:paddingRight="@dimen/space_8">

            <ImageView
                android:id="@+id/ic_home_live_logon"
                android:layout_width="@dimen/spance_12"
                android:layout_height="@dimen/spance_12"
                android:src="@mipmap/ic_home_live_time" />

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/gif_content_gift"
                android:layout_width="@dimen/space_18"
                android:layout_height="@dimen/space_18"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_home_live_caption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_4"
                android:text="直播倒计时"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_12" />

            <TextView
                android:id="@+id/tv_home_live_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_4"
                android:text="12:20:40"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_12" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>