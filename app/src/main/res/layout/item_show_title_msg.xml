<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/space_48"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    android:background="@color/white"
    android:theme="@style/AlertDialog.AppCompat.Light"
  >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/space_32">


        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/space_10"
            android:layout_marginTop="@dimen/space_8"
            android:gravity="center_horizontal"
            android:text="标题"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_14" />
<TextView
    android:id="@+id/tv_msg_contenxt"
    android:textColor="@color/text_fu_color"
    android:textSize="@dimen/text_size_12"
    android:layout_width="match_parent"
    android:layout_marginBottom="@dimen/space_16"
    android:text="2222222222222222222"
    android:gravity="center_horizontal"
    android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_cancal"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/space_32"
                android:background="@drawable/btn_dialog_canle_bg"
                android:textColor="@color/text_fu_color" />

            <Space style="@style/space_16_width" />

            <Button
                android:id="@+id/btn_sure"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/space_32"
                android:background="@drawable/btn_dialog_sure_bg"
                android:textColor="@color/white" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>